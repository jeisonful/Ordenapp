<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00BFFF"
    tools:context=".Activity.AdminActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Admin Panel" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="16dp">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnProducts"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:cardElevation="5dp" >

                <TextView
                    android:id="@+id/productsCounter"
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_button_background"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="99+" />

                <ImageView
                    android:id="@+id/imgProductos"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/products" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAgregarProducto"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button_background2"
                    android:text="Agregar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGestionar"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button_background2"
                    android:text="Gestionar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="75dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/productosTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:text="Inventario" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnOrders"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp" >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOrderPending"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/blue_button_background2"
                    android:text="Pendientes"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOrderShipped"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/blue_button_background2"
                    android:text="Enviadas"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOrderDelivered"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/blue_button_background2"
                    android:text="Entregadas"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="95dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/orderCounter"
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_button_background"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="99+" />

                <ImageView
                    android:id="@+id/imgOrders"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/orders" />

                <TextView
                    android:id="@+id/ordersTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:text="Ã“rdenes" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCustomers"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp" >

                <TextView
                    android:id="@+id/customersCounter"
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_button_background"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="99+" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/customers" />

                <TextView
                    android:id="@+id/textView83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:text="Clientes" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCategories"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/categories" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:text="CategorÃ­as" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>